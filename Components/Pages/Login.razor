@page "/login"
@using Blazor.Services
@using System.ComponentModel.DataAnnotations
@inject UserSessionService UserSession
@inject NavigationHelper NavHelper
@rendermode InteractiveServer

<PageTitle>Login - EventEase</PageTitle>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-person-circle text-primary" style="font-size: 4rem;"></i>
                        <h2 class="mt-3">Welcome Back</h2>
                        <p class="text-muted">Sign in to your EventEase account</p>
                    </div>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle"></i> @errorMessage
                            <button type="button" class="btn-close" @onclick="ClearError"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle"></i> @successMessage
                            <button type="button" class="btn-close" @onclick="ClearSuccess"></button>
                        </div>
                    }

                    <EditForm Model="@loginForm" OnValidSubmit="HandleLogin">
                        <DataAnnotationsValidator />
                        
                        <div class="mb-4">
                            <label for="email" class="form-label">Email Address</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <InputText id="email" type="email" class="form-control" 
                                           @bind-Value="loginForm.Email"
                                           placeholder="Enter your email" />
                            </div>
                            <ValidationMessage For="@(() => loginForm.Email)" />
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-primary btn-lg" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                    <span>Signing in...</span>
                                }
                                else
                                {
                                    <i class="bi bi-box-arrow-in-right"></i>
                                    <span>Sign In</span>
                                }
                            </button>
                        </div>
                    </EditForm>

                    <hr class="my-4" />
                    
                    <div class="text-center">
                        <p class="text-muted mb-3">Don't have an account?</p>
                        <a href="/register" class="btn btn-outline-primary">
                            <i class="bi bi-person-plus"></i> Create Account
                        </a>
                    </div>

                    <div class="mt-4 p-3 bg-light rounded">
                        <small class="text-muted">
                            <strong>Test Accounts:</strong><br/>
                            • john.doe@example.com<br/>
                            • jane.smith@example.com
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginForm loginForm = new();
    private bool isSubmitting = false;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;

    private async Task HandleLogin()
    {
        isSubmitting = true;
        errorMessage = string.Empty;
        
        try
        {
            await Task.Delay(800); // Simulate API delay

            if (UserSession.Login(loginForm.Email))
            {
                successMessage = $"Welcome back, {UserSession.CurrentUser?.FirstName}!";
                await Task.Delay(1000);
                NavHelper.NavigateToHome();
            }
            else
            {
                errorMessage = "Invalid email address or account not found.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void ClearError() => errorMessage = string.Empty;
    private void ClearSuccess() => successMessage = string.Empty;

    public class LoginForm
    {
        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email address")]
        public string Email { get; set; } = string.Empty;
    }
}
