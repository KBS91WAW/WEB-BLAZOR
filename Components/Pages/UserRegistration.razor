@page "/register"
@using Blazor.Models
@using Blazor.Services
@using System.ComponentModel.DataAnnotations
@inject UserSessionService UserSession
@inject NavigationHelper NavHelper
@rendermode InteractiveServer

<PageTitle>User Registration - EventEase</PageTitle>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            @if (registrationComplete)
            {
                <div class="card shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                        <h2 class="mt-3">Registration Successful!</h2>
                        <p class="lead">Welcome to EventEase, <strong>@newUser?.FullName</strong>!</p>
                        <p class="text-muted">You can now browse and register for events.</p>
                        
                        <div class="alert alert-info mt-4">
                            <strong>Your Account Details:</strong><br/>
                            <small>Email: @newUser?.Email</small><br/>
                            <small>Phone: @newUser?.Phone</small>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button class="btn btn-primary btn-lg" @onclick="ContinueAsUser">
                                <i class="bi bi-person-check"></i> Continue as @newUser?.FirstName
                            </button>
                            <button class="btn btn-outline-secondary" @onclick="ViewEvents">
                                <i class="bi bi-calendar-event"></i> Browse Events
                            </button>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h2 class="card-title mb-4">
                            <i class="bi bi-person-plus"></i> Create Account
                        </h2>
                        <p class="text-muted mb-4">Register to access all EventEase features</p>

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="bi bi-exclamation-triangle"></i> @errorMessage
                                <button type="button" class="btn-close" @onclick="ClearError"></button>
                            </div>
                        }

                        <EditForm Model="@registrationForm" OnValidSubmit="HandleSubmit">
                            <DataAnnotationsValidator />
                            <ValidationSummary class="text-danger" />
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="firstName" class="form-label">
                                        First Name <span class="text-danger">*</span>
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                                        <InputText id="firstName" class="form-control" 
                                                   @bind-Value="registrationForm.FirstName" 
                                                   placeholder="John" />
                                    </div>
                                    <ValidationMessage For="@(() => registrationForm.FirstName)" />
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="lastName" class="form-label">
                                        Last Name <span class="text-danger">*</span>
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                                        <InputText id="lastName" class="form-control" 
                                                   @bind-Value="registrationForm.LastName"
                                                   placeholder="Doe" />
                                    </div>
                                    <ValidationMessage For="@(() => registrationForm.LastName)" />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="email" class="form-label">
                                    Email Address <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                    <InputText id="email" type="email" class="form-control" 
                                               @bind-Value="registrationForm.Email"
                                               placeholder="john.doe@example.com" />
                                </div>
                                <ValidationMessage For="@(() => registrationForm.Email)" />
                                <small class="form-text text-muted">We'll never share your email.</small>
                            </div>

                            <div class="mb-3">
                                <label for="phone" class="form-label">
                                    Phone Number <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                    <InputText id="phone" class="form-control" 
                                               @bind-Value="registrationForm.Phone"
                                               placeholder="555-0123" />
                                </div>
                                <ValidationMessage For="@(() => registrationForm.Phone)" />
                            </div>

                            <div class="mb-3">
                                <label for="organization" class="form-label">
                                    Organization <span class="text-muted">(Optional)</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-building"></i></span>
                                    <InputText id="organization" class="form-control" 
                                               @bind-Value="registrationForm.Organization"
                                               placeholder="Your Company" />
                                </div>
                            </div>

                            <div class="mb-4 form-check">
                                <InputCheckbox id="agreeToTerms" class="form-check-input" 
                                               @bind-Value="registrationForm.AgreeToTerms" />
                                <label class="form-check-label" for="agreeToTerms">
                                    I agree to the <a href="#" @onclick:preventDefault>Terms of Service</a> and 
                                    <a href="#" @onclick:preventDefault>Privacy Policy</a> 
                                    <span class="text-danger">*</span>
                                </label>
                                <ValidationMessage For="@(() => registrationForm.AgreeToTerms)" />
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg" disabled="@isSubmitting">
                                    @if (isSubmitting)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                        <span>Creating Account...</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-check-circle"></i>
                                        <span>Create Account</span>
                                    }
                                </button>
                                <button type="button" class="btn btn-outline-secondary" @onclick="Cancel">
                                    Cancel
                                </button>
                            </div>
                        </EditForm>

                        <hr class="my-4" />
                        
                        <div class="text-center">
                            <p class="text-muted mb-0">
                                Already have an account? 
                                <a href="/login" class="text-decoration-none">Sign in here</a>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private UserRegistrationForm registrationForm = new();
    private bool registrationComplete = false;
    private bool isSubmitting = false;
    private string errorMessage = string.Empty;
    private User? newUser;

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        errorMessage = string.Empty;
        
        try
        {
            // Simulate API delay
            await Task.Delay(1000);

            // Register user
            newUser = UserSession.RegisterUser(
                registrationForm.FirstName,
                registrationForm.LastName,
                registrationForm.Email,
                registrationForm.Phone,
                registrationForm.Organization
            );

            if (newUser == null)
            {
                errorMessage = "Registration failed. This email address is already registered.";
                isSubmitting = false;
                return;
            }

            registrationComplete = true;
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void ContinueAsUser()
    {
        if (newUser != null)
        {
            UserSession.Login(newUser.Email);
            NavHelper.NavigateToHome();
        }
    }

    private void ViewEvents()
    {
        NavHelper.NavigateToEvents();
    }

    private void Cancel()
    {
        NavHelper.NavigateToHome();
    }

    private void ClearError()
    {
        errorMessage = string.Empty;
    }

    public class UserRegistrationForm
    {
        [Required(ErrorMessage = "First name is required")]
        [StringLength(50, MinimumLength = 2, ErrorMessage = "First name must be between 2 and 50 characters")]
        [RegularExpression(@"^[a-zA-Z\s]+$", ErrorMessage = "First name can only contain letters")]
        public string FirstName { get; set; } = string.Empty;

        [Required(ErrorMessage = "Last name is required")]
        [StringLength(50, MinimumLength = 2, ErrorMessage = "Last name must be between 2 and 50 characters")]
        [RegularExpression(@"^[a-zA-Z\s]+$", ErrorMessage = "Last name can only contain letters")]
        public string LastName { get; set; } = string.Empty;

        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email address format")]
        [StringLength(100, ErrorMessage = "Email cannot exceed 100 characters")]
        public string Email { get; set; } = string.Empty;

        [Required(ErrorMessage = "Phone number is required")]
        [Phone(ErrorMessage = "Invalid phone number format")]
        [RegularExpression(@"^[\d\s\-\(\)\+]+$", ErrorMessage = "Invalid phone number format")]
        public string Phone { get; set; } = string.Empty;

        [StringLength(100, ErrorMessage = "Organization name cannot exceed 100 characters")]
        public string? Organization { get; set; }

        [Required(ErrorMessage = "You must agree to the terms")]
        [Range(typeof(bool), "true", "true", ErrorMessage = "You must agree to the terms and conditions")]
        public bool AgreeToTerms { get; set; }
    }
}
