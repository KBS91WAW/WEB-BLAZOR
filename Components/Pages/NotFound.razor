@page "/not-found"
@using Blazor.Services
@inject NavigationHelper NavHelper
@inject NavigationManager Navigation
@layout MainLayout

<PageTitle>Page Not Found - EventEase</PageTitle>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-warning">
                <div class="card-body text-center py-5">
                    <i class="bi bi-exclamation-triangle-fill text-warning" style="font-size: 5rem;"></i>
                    <h1 class="display-4 mt-4">404</h1>
                    <h2 class="mb-3">Page Not Found</h2>
                    <p class="lead text-muted mb-4">
                        Sorry, the page you are looking for doesn't exist or has been moved.
                    </p>
                    
                    @if (!string.IsNullOrEmpty(requestedPath))
                    {
                        <div class="alert alert-light small">
                            <strong>Requested path:</strong> <code>@requestedPath</code>
                        </div>
                    }

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                        <button class="btn btn-primary btn-lg" @onclick="NavigateToHome">
                            <i class="bi bi-house-door"></i> Go Home
                        </button>
                        <button class="btn btn-outline-primary btn-lg" @onclick="NavigateToEvents">
                            <i class="bi bi-calendar-event"></i> Browse Events
                        </button>
                    </div>

                    <div class="mt-4">
                        <button class="btn btn-link text-muted" @onclick="GoBack">
                            <i class="bi bi-arrow-left"></i> Go Back
                        </button>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <h5 class="mb-3">Suggested Links:</h5>
                <div class="list-group">
                    <a href="/" class="list-group-item list-group-item-action">
                        <i class="bi bi-house-door"></i> Home Page
                    </a>
                    <a href="/events" class="list-group-item list-group-item-action">
                        <i class="bi bi-calendar-event"></i> Browse All Events
                    </a>
                    <a href="/routing-test" class="list-group-item list-group-item-action">
                        <i class="bi bi-gear"></i> Route Testing Tool
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string requestedPath = string.Empty;

    protected override void OnInitialized()
    {
        var uri = new Uri(Navigation.Uri);
        requestedPath = uri.PathAndQuery;
    }

    private void NavigateToHome() => NavHelper.NavigateToHome();
    private void NavigateToEvents() => NavHelper.NavigateToEvents();
    private void GoBack() => Navigation.NavigateTo("/", false);
}